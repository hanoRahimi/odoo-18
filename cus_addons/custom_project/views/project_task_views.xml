<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="custom_view_task_kanban">
        <field name="name">project.task.kanban</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='tag_ids']" position="before">
                <field name="user_ids"/>
            </xpath>
            <xpath expr="//field[@name='tag_ids']" position="after">
                <div t-if="record.x_scheduled_start_date.raw_value or record.x_scheduled_start_date.raw_value" class="text-muted">
                    <span class="fa fa-clock-o me-2" title="Dates"> تاریخ برنامه ای </span><field name="x_scheduled_start_date"/>
                    <i t-if="record.x_scheduled_end_date.raw_value and record.x_scheduled_start_date.raw_value" class="fa fa-long-arrow-right mx-2 oe_read_only" aria-label="Arrow icon" title="Arrow"/>
                    <field name="x_scheduled_end_date"/>
                </div>
                <field name="x_activity_progress"/>
                <div t-if="record.x_actual_start_date.raw_value or record.x_actual_start_date.raw_value" class="text-muted">
                    <span class="fa fa-clock-o me-2" title="Dates"> تاریخ واقعی</span><field name="x_actual_start_date"/>
                    <i t-if="record.x_actual_end_date.raw_value and record.x_actual_start_date.raw_value" class="fa fa-long-arrow-right mx-2 oe_read_only" aria-label="Arrow icon" title="Arrow"/>
                    <field name="x_actual_end_date"/>
                </div>
            </xpath>
        </field>
    </record>

